@model AdminSeguridad.ViewModels.EmpleadoViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Registro", "Empleado"))
{
    @Html.AntiForgeryToken()
    <div class="bs-container" style="min-height:960px;">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h5 class="box-title">
                        <label class="text-success emailtitleletter">
                            <i class="text-success fa fa-graduation-cap"></i>
                            @User.Identity.Name
                        </label>&nbsp;

                    </h5>
                </div>
                <div class="box-body">
                    <div role="form">
                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group ">
                                    <label>Nombre:</label>
                                    @Html.TextBoxFor(model => model.StrNombre, new { @class = "form-control input-sm", placeholder = "Nombre del Empleado", id = "StrNombre" })
                                    @Html.ValidationMessageFor(model => model.StrNombre, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Apellido Paterno:</label>
                                    @Html.TextBoxFor(model => model.StrApellidoPaterno, new { @class = "form-control input-sm", placeholder = "Apellido Paterno", id = "StrApellidoPaterno" })
                                    @Html.ValidationMessageFor(model => model.StrApellidoPaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Apellido Materno:</label>
                                    @Html.TextBoxFor(model => model.StrApellidoMaterno, new { @class = "form-control input-sm", placeholder = "Aapellido Materno", id = "StrApellidoMaterno" })
                                    @Html.ValidationMessageFor(model => model.StrApellidoMaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>E-mail:</label>
                                    @Html.TextBoxFor(model => model.UsuarioViewModel.Email, new { @class = "form-control input-sm", placeholder = "Tu email", id = "Email" })
                                    @Html.ValidationMessageFor(model => model.UsuarioViewModel.Email, "", new { @class = "text-danger" })
                                    
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group ">
                                    <label>Password:</label>
                                    @Html.PasswordFor(model => model.UsuarioViewModel.Clave, new { @class = "form-control input-sm", id = "Clave" })
                                    @Html.ValidationMessageFor(model => model.UsuarioViewModel.Clave, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Horario de Entrada:</label>
                                    @Html.TextBoxFor(model => model.HorarioLaboralViewModel.DteHorarioEntrada, new { @class = "form-control input-sm", placeholder = "Horario de Entrada", id = "dteHorarioEntrada" })
                                    @Html.ValidationMessageFor(model => model.HorarioLaboralViewModel.DteHorarioEntrada, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Horario de Salida:</label>
                                    @Html.TextBoxFor(model => model.HorarioLaboralViewModel.DteHorarioSalida, new { @class = "form-control input-sm", placeholder = "Horario de Salida", id = "dteHorarioSalida" })
                                    @Html.ValidationMessageFor(model => model.HorarioLaboralViewModel.DteHorarioSalida, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Fecha de Ingreso:</label>
                                    @Html.TextBoxFor(model => model.DteFechaIngreso, new { @class = "form-control input-sm", type = "date", id = "DteFechaIngreso" })

                                </div>
                                <div class="form-group">
                                    <label>Turno:</label>
                                    @Html.DropDownList("IdTurno", null, htmlAttributes: new { @class = "form-control input-sm",id= "IdTurno" })
                                </div>
                                <div class="form-group">
                                    <label>Rol del Usuario:</label>
                                    @Html.DropDownList("IdRoles", null, htmlAttributes: new { @class = "form-control input-sm",id="IdRoles"})
                                </div>
                                <div class="form-group">
                                    <br />
                                    <input type="submit" value="Guardar" class="btn btn-success" id="btnGuardar" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!--termina el box-body-->
            </div>
        </div>
    </div>
}
